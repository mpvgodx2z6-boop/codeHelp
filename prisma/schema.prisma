generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Project {
  id                String   @id @default(cuid())
  name              String
  category          String?
  architectureJson  String?  // JSON stored as String for SQLite
  architectureMd    String?
  forbiddenMistakes String?  // JSON stored as String for SQLite
  modules           String?  // JSON stored as String for SQLite
  descriptionMd     String?
  status            String   @default("active")
  isDeleted         Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  microserviceModules MicroserviceModule[]
}

model MicroserviceModule {
  id                String   @id @default(cuid())
  projectId         String
  name              String
  category          String?
  architectureJson  String?  // JSON stored as String for SQLite
  architectureMd    String?
  forbiddenMistakes String?  // JSON stored as String for SQLite
  modules           String?  // JSON stored as String for SQLite
  descriptionMd     String?
  status            String   @default("active")
  isDeleted         Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  project           Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
}

model CommonPrompt {
  id          String   @id @default(cuid())
  title       String
  type        String?
  tags        String?  // JSON stored as String for SQLite
  contentMd   String
  isDeleted   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
